{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "color-function-notation": "legacy",
        "font-family-no-missing-generic-family-keyword": [
            true,
            {
                "ignoreFontFamilies": [
                    "Be Vietnam Pro",
                    "Kanit"
